<h1>Recetas</h1>

<%= link_to "Nueva Receta", new_recipe_path %>

<table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Tiempo</th>
      <th>Dificultad</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.cook_time %> min</td>
        <td><%= recipe.difficulty %></td>
        <td>
          <%= link_to "Ver", recipe_path(recipe), class: "btn btn-success btn-sm" %>
          <%= link_to "Editar", edit_recipe_path(recipe), class: "btn btn-warning btn-sm" %>
          <%= button_to "Eliminar", recipe_path(recipe), method: :delete, data: { turbo_confirm: "¿Estás seguro?" } %>


      </tr>
    <% end %>
  </tbody>
</table>
